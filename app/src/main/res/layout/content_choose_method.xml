<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@drawable/bakrunnurnytt"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_choose_method"
    android:weightSum="1">


    <Button
            android:onClick="sendMessage()"
            android:layout_width="300dip"
            android:layout_height="wrap_content"
            android:text="@string/button_eat_here"
            android:layout_gravity="center_horizontal"
            android:background="#f15822"
            android:layout_alignParentBottom="true"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:fontFamily="@string/button_eat_here" />

    <Button
        android:onClick="proceedToMainMenu()"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:text="@string/button_take_away"
        android:layout_gravity="center_horizontal"
        android:background="#f15822"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:fontFamily="@string/button_take_away" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/takeawaybutton"
        android:background="######" />

</LinearLayout>
